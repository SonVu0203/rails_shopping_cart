<% provide(:title, 'Home') %>

<% if !logged_in? %>
  <div style="margin-top: -20px"></div>
    <%= render "products_categories/carousel" %>
<% end %>

<div class="mt-5">
  <h1 class="title">KHUYẾN MÃI HOT NHẤT</h1>
</div>
<div class="diliver"></div>
<% @categories.each do |c| %>
  <div class="row mt-5">
    <div class="container">
        <div class="card">
          <div class="card-header bg-cart">
            <p class="title-cart"><%= c.name %> - <%= c.products.count %> products</p>
          </div>
          <div class="card-body">
            <%  c.products.each do |p| %>
                <%= render "products_categories/product", product: p %>
            <%end %>
          </div>
        </div>
    </div>
  </div>
<% end %>


