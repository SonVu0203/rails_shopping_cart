<% provide(:title, 'Products') %>
<h1 class="title">Products</h1>

<div class="row mt-5">
  <% @products.each do |p| %>
    <div class="col-sm-4">
      <div class="card mb-3 item-cart">
        <div class="row no-gutters">
          <div class="col-md-5 shop-cart">
            <% if p.images.length > 0 %>
              <img src="<%= p.images[0].img_src %>" width="100px" >
            <% else %>
              <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcR2p0pc61zxvtknfuyVWI9bq52xVPFO5v72h1CMDNJjPIejCgHQ" width="100px" >
            <%end %>
          </div>
          <div class="col-md-7">
            <div class="card-body">
              <h5 class="card-title"><%= p.name %> - <%= p.id %></h5>
              <p class="card-text">Price: <%= p.price %></p>
              <p class="card-text"><small class="text-muted">Description: <%= p.description %></small></p>
              <button type="button" class="btn btn-outline-success"><%= link_to 'Detail', p %></button>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
