<% provide(:title, @product.name) %>
<div class="container">
  <button type="button" class="btn btn-light mb-5"><%= link_to "Back", products_path %></button>
  <div class="row">
    <div class="col-md-6">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="border: 2px solid #CCCCCC; padding: 5px; border-radius: 5px">
        <div class="carousel-inner" style="height: 300px">
          <div class="carousel-item active">
            <% if @product.images.length > 0 %>
              <img src="<%= @product.images[0].img_src %>" class="w-100" >
            <% else %>
              <img src="https://freshome.com/wp-content/uploads/2018/09/contemporary-exterior.jpg" class="w-100" >
            <%end %>
          </div>
          <div class="carousel-item">
            <img src="https://freshome.com/wp-content/uploads/2018/09/contemporary-exterior.jpg" class="w-100" >
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      <% if logged_in? %>
        <div class="edit-img mt-5" style="display: flex">
          <p style="padding: 10px; color: white; background-color: #FE9A2E; width: 150px; border-radius: 5px; text-align: center; border-radius: 20px;"><b><%= link_to "Sửa", edit_product_path(@product), class: "text-white", style: "padding: 15px" %></b></p>
        </div>
      <% end %>
    </div>
    <div class="col-md-5" style="margin-left: 50px">
      <p style="padding: 5px; color: white; background-color: #9ec701; width: 150px; border-radius: 5px; text-align: center"><b><%= @product.name %></b></p>
      <p class="mt-5" style="color: #777777"><i><%= @product.description %></i></p>
      <div class="dropdown-divider"></div>
      <div class="desc mt-5" style="color: #CCCCCC">
        <div class="row">
          <div class="col-md-4">
            <p>Mô tả</p>
          </div>
          <div class="col-md-8">
            <p style="word-break: break-all;">Căn hộ 1 phòng ngủ Vinhomes Central Park được xây dựng theo kiến trúc mở mang đến không gian sống rộng rãi và thoáng mát. Phòng khách và phòng bếp của căn hộ được bố trí trong cùng một khu vực .Phòng ngủ căn có tầm nhìn nội khu nên cũng rất mát mẻ, không bị nắng gắt vào ban trưa</p>
          </div>
        </div>
      </div>
      <div class="dropdown-divider"></div>
      <div class="price mt-5">
        <div class="wapper-price" style="padding: 10px; background-color: #f6f8f9; border-radius: 5px; margin: 10px 0px">
          <p style="padding: 10px; font-size: 18px; color: red; font-weight: 700"><%= @product.price %>$</p>
        </div>
      </div>
      <div class="dropdown-divider"></div>
      <% if !logged_in? %>
        <div class="btn-cart mt-5">
          <p style="padding: 10px; color: white; background-color: #e8415a; width: 150px; border-radius: 5px; text-align: center; border-radius: 20px;"><b>Mua</b></p>
        </div>
      <% end %>
    </div>
  </div>
</div>




