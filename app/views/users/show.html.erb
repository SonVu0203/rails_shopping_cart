<% provide(:title, @user.name) %>
<div class="container">
  <div class="row">
    <div class="card mb-3">
      <div class="row no-gutters">
        <div class="col-md-5 shop-cart">
          <%= gravatar_for @user, size: 110 %>
        </div>
        <div class="col-md-7">
          <div class="card-body">
            <h5 class="card-title"><%= @user.name %></h5>
            <p class="card-text">Email: <%= @user.email %> - Phone: <%= @user.phone %></p>
            <p class="card-text"><small class="text-muted">Adress: <%= @user.address %></small></p>
            <button type="button" class="btn btn-outline-info"><%= link_to "Back", users_path %></button>
            <button type="button" class="btn btn-outline-warning"><%= link_to 'Edit', edit_user_path %></button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

