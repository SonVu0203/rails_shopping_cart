<nav class="navbar navbar-expand-lg navbar-light bg-light" style="margin-bottom: 0px !important;">
  <div class="logo" style="margin-left: 8em;">
    <p class="nav-link" href="#"><%= link_to "Shop Cart", '#', id:'logo' %></p>
  </div>
  <div class="collapse navbar-collapse" id="navbarSupportedContent" style="font-size: 14px">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item mt-4">
        <%= link_to "Home", root_url %>
      </li>
      <li class="nav-item ml-4 mt-4">
        <%= link_to "Products", products_path %>
      </li>
      <% if !logged_in? %>
        <li class="nav-item dropdown ml-4" style="margin-top: 1px">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span style="color: #007bff">Categories</span>
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <% categories.each do |c| %>
              <%= link_to "#{c.name}", category_url(c.id), class: "dropdown-item" %>
              <div class="dropdown-divider"></div>
          <% end %>
          </div>
        </li>
      <%else %>
        <li class="nav-item ml-4 mt-4">
          <%= link_to "Categories", categories_path %>
        </li>
      <% end %>
      <% if logged_in? %>
        <li class="nav-item dropdown ml-3" style="margin-top: 1px">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span style="color: #007bff">Setting</span>
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <%= link_to "Profile", current_shop, class: "dropdown-item" %>
          </div>
        </li>
        <% end %>
    </ul>
    <%= form_tag(search_path, :method => "get", class: 'navbar-form navbar-left') do %>
      <div class="input-group">
        <%= search_field_tag :search, params[:search], placeholder: "Search", class: "form-control mt-1 input-search" %>
        <div class="input-group-btn">
          <%= button_tag "", :class => 'btn btn-info glyphicon glyphicon-search',:name => nil%>
        </div>
      </div>
    <% end %>
  </div>
</nav>
